@model Kargosha.Data.DTOs.Account.LoginAccount
@{
    ViewData["Title"] = "Login";
}
<br />
<div class="container">
    <div class="col-md-6">
        <div asp-validation-summary="ModelOnly"></div>
        <form asp-route="PostLogin">
            <div class="form-group">
                <input asp-for="UserName" placeholder="UserName" class="form-control" />
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
            <div class="form-group">
                <input asp-for="Password" placeholder="Password" class="form-control" />
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
            <div class="form-group">
                <input asp-for="RememberMe" placeholder="RememberMe" class="form-control" />
            </div>
            <hr />
            <button type="submit" class="btn btn-success btn-block">ورود</button>
        </form>
    </div>
</div>
@section Scripts
{

    <script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}