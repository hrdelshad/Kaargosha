@model Kargosha.Data.DTOs.Account.RegisterAccount
<br />
<div class="container">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<form asp-route="PostRegister">
		<div class="form-group">
			<input asp-for="UserName" placeholder="UserName" class="form-control" />
		</div>
		<span asp-validation-for="UserName" class="text-danger"></span>

		<div class="form-group">
			<input asp-for="FirstName" placeholder="FirstName" class="form-control" />
		</div>
		<span asp-validation-for="FirstName" class="text-danger"></span>

		<div class="form-group">
			<input asp-for="LastName" placeholder="LastName" class="form-control" />
		</div>
		<span asp-validation-for="LastName" class="text-danger"></span>
		<div class="form-group">
			<input asp-for="Email" placeholder="Email" class="form-control" />
		</div>
		<span asp-validation-for="Email" class="text-danger"></span>
		<div class="form-group">
			<input asp-for="Password" placeholder="" class="form-control" />
		</div>
		<span asp-validation-for="Password" class="text-danger"></span>
		<div class="form-group">
			<input asp-for="ConfirmPassword" placeholder="" class="form-control" />
		</div>
		<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
		<hr />
		<button type="submit" class="btn btn-success">ثبت نام</button>
	</form>
</div>
@section Scripts
    {

	<script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
	<script src="//ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}